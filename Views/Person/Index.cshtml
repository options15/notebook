<div class="container-fluid row pl-sm-4">
        <div class="container col-md-4">
            <h2>Enter your details</h2>
            <form asp-controller="Person" method="post" asp-action="Create">
                <div class="form-group">
                    <label>Name</label><br />
                        <input type="text" name="name"><br />
                        <span class="text-danger">@Model.val.Name</span>
                </div>
                <div class="form-group">
                    <label>Surname</label><br />
                    <input type="text" name="surname"><br />
                    <span class="text-danger">@Model.val.Surname</span>
                </div>
                <div class="form-group">
                    <label>Phone</label><br />
                    <input type="text" name="phoneNumber"><br />
                    <span class="text-danger">@Model.val.PhoneNumber</span>
                </div>
                <div class="form-group">
                    <label>Year of birth</label><br />
                    <input type="text" name="yearOfBirth"><br />
                    <span class="text-danger">@Model.val.YearOfBirth</span>
                </div>
                <input class="btn btn-success" type="submit" value="Create" />
            </form>
        </div>
        <div class="container col-md-8">
            <div class="container">
                <h1>Person List</h1>
                <form asp-controller="Person" asp-action="Search" method="post" class="form-inline">
                    <div float:left;>
                        <label>Name</label>
                        <input type="text" name="name">
                    </div>
                    <div float:left; class="pl-sm-3">
                        <label>Surname</label>
                        <input type="text" name="surname">
                    </div>
                    <div float:left; class="pl-sm-3">
                        <label>Phone</label>
                        <input type="text" name="phoneNamber">
                    </div>
                    <div class="pl-sm-3"> <input class="btn btn-primary" type="submit" value="Search" /></div>
                </form>
            </div>
            <form asp-controller="Person" asp-action="Delete" method="post">
                <table class="table">
                    <tr>
                        <th>@Html.ActionLink("Surname", "Sort", "Person", new { sortValue = "Surname" })</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>@Html.ActionLink("Year of birth", "Sort", "Person", new { sortValue = "Year" })</th>
                        <th></th>
                    </tr>
                    @foreach (var person in Model.PersonModel)
                    {
                        <tr>
                            <td>@person.Surname</td>
                            <td>@person.Name</td>
                            <td>@person.PhoneNumber</td>
                            <td>@person.YearOfBirth</td>
                            <td><input class="btn btn-danger" type="submit" asp-route-id="@person.Id" value="Delete" /> </td>
                        </tr>
                    }

                </table>
            </form>
        </div>
    </div>
